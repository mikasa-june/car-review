.header
  .header__container
    - if user_signed_in?
      .user-fix
        -# = link_to truncate(current_user.name, length: 13), root_path, class: :user_name
        = link_to "ユーザー：#{truncate(current_user.name, length: 13)}", "/users/#{current_user.id}", class: :user_name

    -else
      .header-fix3
    .title
      = link_to "car Reviews", root_path, class: :title__name
    .header-fix1
      - if user_signed_in?
        .header-fix2
        .logout__btn
          = link_to "LOGOUT", destroy_user_session_path, method: :delete, class: :logout
      - else
        .user__name--fix2
        .login__btn
          = link_to "LOGIN", new_user_session_path, class: :login
  .menu-bar
    - if user_signed_in?
      .my_link-btn
        = link_to "/users/#{current_user.id}", class: :my_link do
          マイページ
      .show_link-btn
        = link_to root_path, class: :show_link do
          投稿一覧
      .post-btn
        = link_to new_review_path, class: :post do
          投稿する
      .likes-btn
        = link_to new_category_path, class: :likes do
          カテゴリー
    - else
      .header-fix4
      .new-btn
        = link_to new_user_registration_path, class: :new do
          新規登録
